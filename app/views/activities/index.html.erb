<h6>Stuff to do!</h>

<% @activities.each do |activity| %>
<div class="row">
  <a href="<%= edit_activity_path(activity.id) %>">
    <div class="span12 well">
      <div>
        <%= activity.name %>
      </div>
      <div>
        <span class="label <%= "label-#{activity.state.label}" if activity.state.label  %>"><%= activity.state.name if activity.state %></span>
      </div>
    </div>
  </a>
</div>
<% end %>

<%= link_to 'New Activity', new_activity_path, :class => "btn" %>
